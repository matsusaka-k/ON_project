<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F5F5"
    android:scrollbarSize="10dp"
    tools:context=".Myroom">

    <ImageView
        android:id="@+id/BackGroundImage"
        android:layout_width="439dp"
        android:layout_height="971dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/night" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="128dp"
        android:layout_height="133dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <ImageView
        android:id="@+id/shopIcon"
        android:layout_width="104dp"
        android:layout_height="110dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ChangeFurniture"
        app:srcCompat="@drawable/shop" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="98dp"
        android:layout_height="101dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/setting" />

    <ImageView
        android:id="@+id/obake_bed"
        android:layout_width="376dp"
        android:layout_height="411dp"
        android:layout_marginTop="264dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.673"
        app:layout_constraintStart_toStartOf="@+id/BackGroundImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/obake_bed" />

    <ImageView
        android:id="@+id/obake"
        android:layout_width="204dp"
        android:layout_height="187dp"
        android:layout_marginTop="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.212"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/obake_normal" />

    <ImageView
        android:id="@+id/ChangeFurniture"
        android:layout_width="129dp"
        android:layout_height="116dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shopIcon"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toEndOf="@+id/setting"
        app:srcCompat="@drawable/furniture" />

    <ImageView
        android:id="@+id/hukidashi1"
        android:layout_width="219dp"
        android:layout_height="168dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hukidashi_1" />

    <ImageView
        android:id="@+id/hukidashi2"
        android:layout_width="250dp"
        android:layout_height="155dp"
        android:layout_marginTop="370dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hukidashi_2" />

    <TextView
        android:id="@+id/hukidashi1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="@+id/hukidashi1"
        app:layout_constraintTop_toTopOf="@+id/hukidashi1" />

    <TextView
        android:id="@+id/hukidashi2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="@+id/obake_bed"
        app:layout_constraintTop_toBottomOf="@+id/obake" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-45dp">

        <ImageView
            android:id="@+id/start_obake"
            android:layout_width="389dp"
            android:layout_height="464dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/obake_rise_hand" />

        <ImageView
            android:id="@+id/start_hukidashi"
            android:layout_width="409dp"
            android:layout_height="320dp"
            android:layout_marginTop="350dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/start_obake"
            app:srcCompat="@drawable/hukidashi" />

        <TextView
            android:id="@+id/obake_hukidashi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/mobo"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/start_hukidashi"
            app:layout_constraintTop_toTopOf="@+id/start_hukidashi" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
